<h2 class="text-center p-0 mb-4 mt-5 h1">Les Actualités</h2>
<div class="container-fluid">
    <div class="row mb-5">
        {% for news in news %}
            <div class="col-12 {{ news|length <=2 ? 'col-md-6': 'col-md-4' }} mx-auto h-100">
                <div class="card col-12 col-md-11 mx-auto bg-cardgame card-zoom">

                    <div class="card-body">
                        <h5 class="card-title">{{ news.title }}</h5>
                        <p class="card-text">{{ news.content|striptags|excerpt(20) }}</p>
                        <a class="btn btn-outline-light mb-3 me-2"
                           href="{{ path('news_show', {'slug': news.slug}) }}">voir
                            plus</a>
                        {% if is_granted('ROLE_ADMIN') %}

                            <a href="{{ path('news_edit', {'id': news.id}) }} "
                               class="btn btn-outline-warning mb-3 me-2">Modifier</a>
                            <form method="post" action="{{ path('news_delete', {'id': news.id}) }}"
                                  onsubmit="return confirm('Voulez-vou vraiment supprimer {{ news.title }}');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
                                <button class="btn btn-outline-danger mb-3 me-2">supprimer</button>
                            </form>
                        {% endif %}
                    </div>

                </div>
            </div>
        {% else %}
            <p class="alert alert-warning">pas encore d'actualité mais ça arrive</p>
        {% endfor %}
    </div>
</div>
