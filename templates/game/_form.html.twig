<div class="container-fluid">
    <div class="text-center">

    <a href="{{ path('game_index') }}" class="btn btn-outline-light me-3">Retour liste des jeux</a>

    </div>
    <div class="row">
        <div class="col-12">

            {{ form_start(form) }}
            {{ form_row(form.name, {
                label: 'Nom du jeu',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.description, {
                label: 'Description',
                label_attr: {
                    class: 'text-ivoire'
                }

            }) }}
            {{ form_row(form.dateStart, {
                label: 'Date de début',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.dateEnd, {
                label: 'Date de fin',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.adress, {
                label: 'Adresse où ce déroulera le jeu',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.postcode, {
                label: 'Code postal',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.city, {
                label: 'Ville',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.disclaimer, {
                label: 'Disclaimer remboursement (facultatif)',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {% if game.banner %}
                {{ form_label(form.banner, 'Bannière',{
                    'label_attr': {'class': 'text-ivoire'}
                }) }}
                {{ form_widget(form.banner, {
                    attr: {
                        class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                    }
                }) }}
            {% else %}
                {{ form_label(form.banner, 'Bannière',{
                    'label_attr': {'class': 'text-ivoire'}
                }) }}
                {{ form_widget(form.banner, {
                    label: 'bannière',
                    attr: {
                        required: 'required',
                        class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light',

                    },
                    row_attr: {
                        class: 'form-floating bg-dark text-ivoire mb-3'
                    }
                }
                ) }}

            {% endif %}
            <button class="btn my-3 {{ button_color|default('btn-outline-success') }}">{{ button_label|default('Créer') }}</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>
