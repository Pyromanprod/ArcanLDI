<div class="row p-0 m-0 hidden">
    <h1 class="text-center mb-4">Tous nos jeux</h1>
    {% for game in allGames %}

{#        TERNAIRE POUR LE COL MD EN FONCTION DU NOMBRE DE JEU#}
    <div class="col-12 {{ allGames|length <=2 ? 'col-md-6': 'col-md-4' }} mx-auto">

            <div class="card col-12 mx-auto bg-cardgame p-0 my-2 card-zoom thegame h-100">
                <a href="{{ path('game_show', {'slug': game.slug}) }}" class="text-decoration-none text-light d-inline">
                    <img src="{{ asset(game_photo_directory~game.banner)|imagine_filter('banner_game') }}"
                         class="card-img-top" alt="">
                    <div class="card-body">
                        <h5 class="card-title">{{ game.name }}</h5>
                        <p class="card-text">{{ game.description|purify|striptags|excerpt(20) }}</p>
                        <a href="{{ path('game_show', {'slug': game.slug}) }}" class="btn btn-outline-light mb-3 me-2">Voir
                            plus</a>
                        {% if is_granted('ROLE_ADMIN') %}

                            <a href="{{ path('game_edit', {'id': game.id}) }} "
                               class="btn btn-outline-warning mb-3 me-2">Modifier</a>
                            {% if game.isPublished == false %}
                                <a href="{{ path('publish_game', {'id': game.id}) }}?csrf_token={{ csrf_token('publish' ~ game.id) }} "
                                   class="btn btn-outline-success mb-3 me-2">Publier</a>
                            {% endif %}
                            <a href="{{ path('game_add_album_Photo', {'id': game.id}) }} "
                               class="btn btn-outline-info mb-3 me-2">Ajouter album</a>
                            {% include('game/_delete_form.html.twig') %}
                        {% endif %}
                    </div>
                </a>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning">Pas de jeux enregistr√©</div>
        {% endfor %}
    </div>
