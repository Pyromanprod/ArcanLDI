{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-lg-10">

                <div class="row">
                    <h1 class="text-center">{{ game.name }}</h1>
                </div>
                <div class="row">
                    <div class="col-12 m-0 p-0">
                        <img src="{{ asset("img/uploads/"~game.name~"/banner.jpg") }}" alt=""
                             class="w-100 m-0 mb-5 p-0">
                    </div>
                    <div class="col-12 ckeditor">
                        <p class="text-center">

                            {{ game.description|purify|raw }}
                        </p>
                    </div>
                </div>

            </div>
            <div class="col-12 col-lg-2">
                {% for ticket in game.tickets %}
                    {% if ticket.stock %}
                        <p>{{ ticket.name }} : {{ ticket.price }} €</p>
                    {% else %}
                        <p>{{ ticket.name }} : épuisé </p>

                    {% endif %}

                {% endfor %}
                <a href="{{ path('order_new', {'slug':  game.slug }) }}" class="btn btn-warning mx-auto">Acheter un
                    ticket</a>
                <a href="{{ path('see_album', {'slug': game.slug})}}" class="btn btn-success mx-auto">Gallery</a>
            </div>
        </div>

        <a href="{{ path('game_index') }}" class="btn btn-outline-light mb-3 me-2">Retour a la liste des jeux</a>
        {% if is_granted('ROLE_ADMIN') %}

            <a href="{{ path('game_edit', {'id': game.id}) }} " class="btn btn-outline-warning  mb-3 me-2">Modifier</a>
            <a href="{{ path('game_add_album_Photo', {'id': game.id}) }} "
               class="btn btn-outline-info mb-3 me-2">Ajouter album</a>
        {{ include('game/_delete_form.html.twig') }}
        {% endif %}

        <div class="row">
            <div class="col-12 col-md-8 offset-md-2 mt-3">
                {% if date(game.dateEnd) < date() and form%}
                {{ include('news_comment/_form.html.twig') }}
                {% endif %}
                {% for comment in game.gameComments %}
                    <div class="row">
                        <div class="col-12 mt-3">
                            <div class="card bg-cardgame">
                                <div class="card-header">
                                    {{ comment.author.pseudo }}
                                </div>
                                <div class="card-body ckeditor">
                                    <p class="card-text">{{ comment.content|purify|raw }}</p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
