{% extends 'base.html.twig' %}

{% block title %}{{ game.name }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-lg-10">

                <div class="row">
                    <h1 class="text-center">{{ game.name }}</h1>
                </div>
                <div class="row">
                    <div class="col-12 m-0 p-0">
                        <img src="{{ asset("img/uploads/"~game.name~"/banner.jpg") }}" alt=""
                             class="w-100 m-0 mb-5 p-0">
                    </div>
                    <div class="col-12">
                        <p class="text-center">

                            {{ game.description }}
                        </p>
                    </div>
                </div>

            </div>
            <div class="col-12 col-lg-2">
                {% for ticket in game.tickets %}
                    {% if ticket.stock %}
                        <p>{{ ticket.name }} : {{ ticket.price }} €</p>
                    {% else %}
                        <p>{{ ticket.name }} : épuisé </p>

                    {% endif %}

                {% endfor %}
                <a href="{{ path('order_new', {'slug':  game.slug }) }}" class="btn btn-warning mx-auto">Acheter un
                    ticket</a>
            </div>
        </div>

        <a href="{{ path('game_index') }}" class="btn btn-outline-light">Retour a la liste des jeux</a>
        {% if is_granted('ROLE_ADMIN') %}

            <a href="{{ path('game_edit', {'id': game.id}) }} " class="btn btn-outline-light">Modifier</a>
        {% endif %}


        {{ include('game/_delete_form.html.twig') }}
    </div>
{% endblock %}
