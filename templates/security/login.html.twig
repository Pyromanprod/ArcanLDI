{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">
            <div class="col-12 col-md-6 mx-auto text-center">
                <form method="post">
                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {% if app.user %}
                        <div class="mb-3">
                            Vous êtes déjà connecté {{ app.user.userIdentifier }},
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-light">Se déconnecter</a>
                        </div>
                    {% else %}

                        <h1 class="h3 mb-3 font-weight-normal">Connexion</h1>

                        <div class="form-floating mb-3 text-ivoire">
                            <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                                   class="form-control bg-dark border-0 border-bottom border-ivoire rounded-0 text-light"
                                   autocomplete="email" placeholder="" required>
                            <label for="inputEmail">Email :</label>
                        </div>
                        <div class="form-floating mb-3 text-ivoire">
                            <input type="password" name="password" id="inputPassword"
                                   class="form-control bg-dark border-0 border-bottom border-ivoire rounded-0 text-light"
                                   autocomplete="current-password"
                                   required placeholder="">

                            <label for="inputPassword">Mot de passe :</label>
                        </div>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >


                        <button class="btn btn-outline-success mt-2" type="submit">
                            Se connecter
                        </button>
                        <a class="btn btn-outline-light mt-2" href="{{ path('app_register') }}">Pas encore inscrit?</a>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>

{% endblock %}
