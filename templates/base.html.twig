{% set route = app.request.attributes.get('_route') %}
<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {# FONT AWESOME #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css"
          integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    {# BOOTSTRAP #}
    <link rel="stylesheet" href="{{ asset('css/bootstrap.min.css') }}">
    {# STYLE PERSO #}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    {% block stylsheet %}{% endblock %}
    <title>{% block title %}{% endblock %} - Arcan, Les démons d'ivoire</title>
</head>
<body class="bg-dark text-light">
<nav class="navbar navbar-expand-lg navbar-dark bg-black">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ path('home') }}"><img
                    src="{{ asset('img/Logo Asso.jpg')|imagine_filter('logo_nav') }}" alt="" width="100"></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        {# A GAUCHE #}
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link {{ route == 'home' ? 'active' }}" aria-current="page"
                       href="{{ path('home') }}">Arcan</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link {{ route == 'game_index' ? 'active' }}" aria-current="page"
                       href="{{ path('game_index') }}">Nos Jeux</a>
                </li>
            </ul>

            {# A DROITE #}
            <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                {% if app.user %}
                    <li class="nav-item">
                        <a class="nav-link {{ route == 'app_login' ? 'active' }}" aria-current="page"
                           href="{{ path('user_show_profile') }}">{{ app.user.pseudo }}</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ route == 'app_register' ? 'active' }}" aria-current="page"
                           href="{{ path('app_logout') }}">Deconnexion</a>
                    </li>
                    {% if is_granted('ROLE_ADMIN') %}

                        <li class="nav-item">
                            <a class="nav-link {{ route == 'admin_home' ? 'active' }}" aria-current="page"
                               href="{{ path('admin_home') }}">Administration</a>
                        </li>
                    {% endif %}
                {% else %}
                    <li class="nav-item">
                        <a class="nav-link {{ route == 'app_login' ? 'active' }}" aria-current="page"
                           href="{{ path('app_login') }}">Se connecter</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ route == 'app_register' ? 'active' }}" aria-current="page"
                           href="{{ path('app_register') }}">Créer un compte</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{% if app.session.flashBag.has('error') %}
    <div class="container">
        <div class="row">
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible fade show text-center col-12 my-3" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
{% if app.session.flashBag.has('success') %}
    <div class="container">
        <div class="row">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success alert-dismissible fade show text-center col-12 my-3" role="alert">
                    {{ message }}
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            {% endfor %}
        </div>
    </div>
{% endif %}
{% block body %}

{% endblock %}
<script src="{{ asset('js/bootstrap.bundle.min.js') }}"></script>
</body>
</html>
