{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Liste des commandes</h1>


        {% for order in orders %}

            <div class="card bg-cardgame col-12 col-md-2 mx-auto p-0 my-3">
                <div class="card-header bg-header-card">
                    <h5>Billet pour le jeu :  {{ order.ticket.game.name }}</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush ">
                        <li class="list-group-item bg-transparent text-light">Acheter par : {{ order.player.pseudo }}</li>
                        <li class="list-group-item bg-transparent text-light">Prix : {{ order.total }} €</li>
                        <li class="list-group-item bg-transparent text-light">

                            {% if order.datePaid %}
                                Payé le {{ order.datePaid|date('d-m-Y') }}
                            {% else %}
                                En cours de paiement
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </div>

        {% else %}
           <div class="alert alert-warning">
               Pas encore de billet acheter
           </div>
        {% endfor %}

{% endblock %}
