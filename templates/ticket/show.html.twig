{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
    <div class="container">

        <h1>Ticket</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ticket.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ticket.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ticket.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ticket.createdAt ? ticket.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ ticket.updatedAt ? ticket.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col-12 col-lg-4 mx-auto">


                {{ form_start(formnotgeneral) }}
                {{ form_row(formnotgeneral.survey, {'label': 'Les questionnaires précis'}) }}
                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(formnotgeneral) }}
            </div>
            <div class="col-12 col-lg-4 mx-auto">


                {{ form_start(formgeneral) }}
                {{ form_row(formgeneral.surveya, {'label': 'Les questionnaires généraux'}) }}
                <button type="submit" class="btn btn-primary">Ajouter</button>
                {{ form_end(formgeneral) }}
            </div>
        </div>

        <a href="{{ path('ticket_index') }}">back to list</a>

        <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>

        {{ include('ticket/_delete_form.html.twig') }}
    </div>
{% endblock %}
