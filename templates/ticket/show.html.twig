{% extends 'base.html.twig' %}

{% block title %}Ticket{% endblock %}

{% block body %}
<div class="container">

    <h1 class="text-center">Ticket</h1>
    <div class="row">

        <div class="card bg-cardgame col-12 col-md-4 p-0 my-3">
            <div class="card-header bg-header-card">
                <h5>Nom du ticket : {{ ticket.name }}</h5>
            </div>
            <div class="card-body">
                <ul class="list-group list-group-flush ">
                    <li class="list-group-item bg-transparent text-light">Prix : {{ ticket.price }} €</li>
                    <li class="list-group-item bg-transparent text-light">Pour le jeu
                        : {{ ticket.game.name }}</li>
                    <li class="list-group-item bg-transparent text-light">En Stock
                        : {{ ticket.stock }}</li>
                    <li class="list-group-item bg-transparent text-light">
                        <a class="btn btn-outline-warning mb-3 me-2"
                           href="{{ path('ticket_edit', {'id': ticket.id}) }}">Modifier</a>

                        {{ include('ticket/_delete_form.html.twig') }}
                    </li>
                </ul>
            </div>
            <div class="card-footer list-group-item bg-transparent text-light">
                <p class="text-info text-end blockquote-footer m-0">
                    Créé le : {{ ticket.createdAt ? ticket.createdAt|date('d-m-Y') : '' }}
                </p>
            </div>

        </div>
        <div class="col-md-8 text-center">

                <a href="{{ path('ticket_new') }}" class="btn btn-outline-info mb-3 me-2">Nouveau ticket</a>
            <a class="btn btn-outline-info mb-3 me-2"
               href="{{ path('survey_ticket_ordered', {'id': ticket.id}) }}">Ordonner
                les questionnaires</a>
                <a class="btn btn-outline-light mb-3 me-2" href="{{ path('ticket_index') }}">revenir a la liste des
                    ticket</a>


            {{ form_start(formgeneral) }}
            {{ form_row(formgeneral.survey, {
                'label': 'Questionnaires généraux',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            <button type="submit" class="btn btn-outline-success">Associer</button>
            {{ form_end(formgeneral) }}


            {{ form_start(formnotgeneral) }}
            {{ form_row(formnotgeneral.survey, {
                'label': 'Questionnaires précis',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }}) }}
            <button type="submit" class="btn btn-outline-success">Associer</button>
            {{ form_end(formnotgeneral) }}

        </div>
    </div>
</div>
    {% endblock %}
