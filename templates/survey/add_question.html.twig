{% extends 'base.html.twig' %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-12 col-md-3 col-lg-2">
                <h3>Ajouter un question</h3>
                {{ form_start(form) }}
                {{ form_row(form.content, {'label': 'Question :'}) }}
                {{ form_row(form.select, {'label': 'Liste d√©roulante'}) }}
                <button type="submit" class="btn btn-outline-primary">Ajouter la question</button>
                {{ form_end(form) }}
            </div>


            <div class="col-12 col-md-8 col-lg-6 ms-5">
                <h3>Questions pour "{{ survey.name }}"</h3>

                {% for question in survey.question %}
                    <div class="row">

                        {{ question.content }}
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

