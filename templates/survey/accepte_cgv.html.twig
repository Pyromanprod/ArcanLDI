{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row mt-5">
            <div class="col-12 col-md-6 mx-auto">

                <a href="{{ asset('cgv/'~order.ticket.cgv) }}" target="_blank">Conditions générales de vente du ticket</a>
                {{ form_start(form) }}
                {{ form_row(form.is_cgv, {
                    'label': 'J\'accepte les conditions générales de vente ci-dessus'
                }) }}
                <button type="submit" class="btn btn-outline-warning">J'accepte</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}

{% block title %}Vous devez accepter les CGV{% endblock %}


