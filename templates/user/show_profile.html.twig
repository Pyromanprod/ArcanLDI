{% extends 'base.html.twig' %}

{% block title %}{{ app.user.pseudo }}{% endblock %}

{% block body %}

    <div class="card bg-cardgame col-12 col-md-5 mx-auto my-5">
        <div class="card-header bg-header-card text-center">
            <h1>{{ app.user.pseudo }}</h1>
        </div>
        <img src="{{ asset('img/user/'~app.user.photo)|imagine_filter('profil') }}" class="card-img-top img-fluid" alt="Votre photo de profil">
        <div class="card-body">
            <ul class="list-group list-group-flush ">
                <li class="list-group-item bg-transparent text-light">Email : {{ app.user.email }} </li>
                <li class="list-group-item bg-transparent text-light">Prénom : {{ app.user.firstname }}</li>
                <li class="list-group-item bg-transparent text-light">Nom : {{ app.user.lastname }}</li>
            </ul>
        </div>
        <div class="card-footer list-group-item bg-transparent text-light">
            <a class="btn btn-outline-warning" href="{{ path('user_edit_profile') }}">Modifier mes informations</a>
            <a class="btn btn-outline-danger" href="{{ path('app_password_reset') }}">Réinitialiser mon mot de passe</a>
        </div>
    </div>
{% endblock %}

