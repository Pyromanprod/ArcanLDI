{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    {% for ticket in tickets %}
        <a href="{{ path('user_index_ticket', {'id': ticket.id}) }}">{{ ticket.name }}</a>
    {% endfor %}
    <h1>User index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Pseudo</th>
                <th>roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.pseudo }}</td>
                <td>
                {% for role in user.roleGroupes%}
                    {{ role.name }} <form method="post" action="{{ path('role_delete', {'pseudo': user.pseudo, 'id': role.id} ) }}" onsubmit="return confirm('etes vous sur de vouloir retirer ce role?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ role.id) }}"><button class="btn">D</button>
                </form>
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">show</a>
                    <a href="{{ path('role_groupe_add', {'id': user.id}) }}">ajouter un groupe</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}">Create new</a>
{% endblock %}
