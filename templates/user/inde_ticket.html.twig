{% extends 'base.html.twig' %}

{% block title %}Joueur{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center">Joueurs ayant acheté le ticket {{ tickets.name }} du jeu {{ tickets.game.name }}</h1>
        <div class="row">
            {% for user in users %}
                <div class="col-12 col-md-4 mx-auto">
                    <div class="card mx-auto my-3 col-12 bg-cardgame p-0">
                        <div class="card-header bg-header-card text-center">
                            <h5 class="card-title searching">{{ user.pseudo }}</h5>
                        </div>
                        <div class="card-body">
                            <h6 class="card-subtitle mb-2 text-muted">{{ user.firstname }}  {{ user.lastname }}</h6>
                            <p class="card-text">Email: {{ user.email }}</p>
                            <a class="btn btn-outline-light" href="{{ path('user_show', {'id': user.id}) }}">Voir
                                plus</a>
                        </div>
                    </div>

                </div>

            {% endfor %}
            <div class="my-3 text-center">
                <div class="d-inline-block">
                    {# Affichage du menu permettant de naviguer entre les différentes pages #}
                    {{ knp_pagination_render(users) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
