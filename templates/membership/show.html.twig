{% extends 'base.html.twig' %}

{% block title %}liste des adhérants{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-12 mx-auto">
                <table class="table table-dark table-striped">
                    <thead>
                    <tr>
                        <th>pseudo</th>
                        <th>email</th>
                        {% if membership %}

                        <th>action</th>
                        {% endif %}
                    </tr>
                    </thead>
                    <tbody>
                    {% for member in members %}
                        <tr>
                            <td>{{ member.pseudo }}</td>
                            <td>{{ member.email }}</td>
                            {% if membership %}
                            <td><a onclick="alert('etes vous sûr?')" class="btn-outline-warning btn" href="{{ path('manual_payment', {'id': membership, 'user': member.id}) }}">paiement hors site</a>
                            <a onclick="alert('etes vous sûr?')" class="btn-outline-danger btn" href="{{ path('manual_payment', {'id': membership, 'user': member.id}) }}">retirer de la cotisation</a></td>
                            {% endif %}
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
        </div>
    </div>


    <a class="btn btn-outline-warning" href="{{ path('membership_index') }}">retour</a>


{% endblock %}
