<div class="container-fluid">
    <div class="text-center">
        <a class="btn-outline-light btn" href="{{ path('role_groupe_index') }}">Retour à la liste des rôles</a>
    </div>
    <div class="row">
        <div class="col-12 col-md-6 mx-auto">


            {{ form_start(form) }}
            {{ form_row(form.name, {
                label: 'Nom du groupe',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            {{ form_row(form.game, {
                label: 'Jeu',
                attr: {
                    placeholder: '',
                    class: 'bg-dark border-0 border-bottom border-ivoire rounded-0 text-light'
                },
                row_attr: {
                    class: 'form-floating bg-dark text-ivoire mb-3'
                }
            }) }}
            <button class="btn {{ button_color|default('btn-outline-success') }}">{{ button_label|default('Créer') }}</button>
            {{ form_end(form) }}

        </div>
    </div>
</div>
