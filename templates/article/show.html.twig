{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <div class="conatainer">
                <h1 class="text-center">{{ article.title }}</h1>
        <div class="row">
            <div class="col-12 text-center">
                {{ article.content }}
            </div>
        </div>
    </div>

    <a class="btn btn-outline-primary" href="{{ path('article_index') }}">retour a l'accueil</a>

    {% if is_granted('ROLE_ADMIN') %}

    <a class="btn btn-outline-primary" href="{{ path('article_edit', {'id': article.id}) }}">modifier</a>
    {% endif %}

    {{ include('article/_delete_form.html.twig') }}
    {% for coment in article.coments %}

    <div class="row">
        <div class="col-4 offset-4">
            <div class="card">
                <div class="card-header">
                    {{ coment.player.pseudo }}
                </div>
                <div class="card-body">
                    <p class="card-text">{{ coment.content }}</p>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
